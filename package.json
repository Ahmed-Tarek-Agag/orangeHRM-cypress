{
  "name": "orangehrm-cypress",
  "version": "1.0.0",
  "scripts": {
    "start": "react-scripts start",
    "test": "cypress run",
    "cypress:clean": "rm -rf allure-report allure-results cypress/reports",
    "cypress:run:allure": "npm run cypress:clean && npx cypress run",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/output.json",
    "report:generate": "npx marge cypress/reports/output.json --reportFilename index --reportDir cypress/reports",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "run:full": "npm run cypress:run:allure && npm run report:merge && npm run report:generate && npm run allure:generate"
  },
  "dependencies": {
    "cypress": "^15.8.1"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "fs-extra": "^11.1.1"
  }
}
