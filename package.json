{
  "name": "orangehrm-cypress",
  "version": "1.0.0",
  "scripts": {
    "cypress:clean": "rimraf cypress/reports allure-report allure-results",
    "cypress:run": "npx cypress run",
    "cypress:run:all": "npm run cypress:clean && npm run cypress:run && npm run report:merge && npm run report:generate && npm run allure:generate",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/output.json",
    "report:generate": "npx marge cypress/reports/output.json -f index -o cypress/reports",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report"
  },
  "dependencies": {
    "cypress": "^15.8.1"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "fs-extra": "^11.3.3",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "rimraf": "^6.1.2"
  }
}