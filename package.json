{
  "name": "orangehrm-cypress",
  "version": "1.0.0",
  "scripts": {
    "test": "npx cypress run",
    "cypress:clean": "rm -rf allure-report allure-results cypress/reports",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/output.json",
    "report:generate": "npx marge cypress/reports/output.json -f report -o cypress/reports",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "cypress:run:all": "npm run cypress:clean && npx cypress run && npx mochawesome-merge cypress/reports/*.json > cypress/reports/output.json && npx marge cypress/reports/output.json -f report -o cypress/reports && allure generate allure-results --clean -o allure-report && echo 'ðŸŽ‰ All reports generated successfully!'"
  },
  "dependencies": {
    "cypress": "^15.8.1",
    "fs-extra": "^11.3.3"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2"
  }
}
